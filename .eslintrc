{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", { "code": 80 }], // Enforces a maximum line length of 80 characters
    "indent": ["error", 2, { "SwitchCase": 1 }], // Uses 2 spaces for indentation
    "no-tabs": "error", // Disallows the use of tabs
    "semi": ["error", "always"], // Requires semicolons at the end of statements
    "quotes": ["error", "double", { "avoidEscape": true }], // Uses double quotes
    "quote-props": ["error", "as-needed"], // Quotes object properties only when necessary
    "jsx-quotes": ["error", "prefer-double"], // Uses double quotes in JSX
    "comma-dangle": ["error", "only-multiline"], // Requires trailing commas in multiline objects and arrays
    "object-curly-spacing": ["error", "always"], // Enforces spacing inside curly braces
    "array-bracket-spacing": ["error", "never"], // Disallows spacing inside array brackets
    "computed-property-spacing": ["error", "never"], // Disallows spacing inside computed properties
    "space-in-parens": ["error", "never"], // Disallows spaces inside parentheses
    "arrow-parens": ["error", "always"], // Requires parentheses around arrow function arguments
    "eol-last": ["error", "always"], // Requires a newline at the end of files
    "linebreak-style": ["error", "unix"], // Enforces Unix linebreaks (LF)
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }], // Enforces one true brace style
    "space-before-function-paren": ["error", "never"], // Disallows space before function parentheses
    "keyword-spacing": ["error", { "before": true, "after": true }], // Enforces spacing around keywords
    "space-infix-ops": "error", // Requires spacing around infix operators
    "padded-blocks": ["error", "never"], // Disallows padding within blocks
    "spaced-comment": ["error", "always", { "exceptions": ["-", "+"] }], // Enforces spacing after comment start
    "arrow-spacing": ["error", { "before": true, "after": true }], // Enforces spacing around arrow function arrows
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }], // Disallows multiple empty lines
    "no-trailing-spaces": "error", // Disallows trailing whitespace at the end of lines
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }] // Enforces newline per chained call
  }
}
